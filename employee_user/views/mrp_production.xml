<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_form_view_employee" model="ir.ui.view">
        <field name="name">mrp.production.form.view.employee</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position='after'>
                <field name="employee_id"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_tree_view_employee" model="ir.ui.view">
        <field name="name">mrp.production.tree.view.employee</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position='attributes'>
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position='before'>
                <field name="employee_id" string="Responsable"/>
            </xpath>
        </field>
    </record>



</odoo>
